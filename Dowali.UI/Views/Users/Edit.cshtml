@model Core.Entities.User
@using Core.Enums

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var selectList = Enum.GetValues(typeof(Roles))
                     .Cast<Roles>()
                     .Where(e => e != Roles.Super_Admin)
                     .Select(e => new SelectListItem
                             {
                                 Value = ((int)e).ToString(),
                                 Text = e.ToString()
                             });
}

<div class="block">

        <div class="col-md-12">
        <div style="justify-content:center;display:flex">
            <div style="width:80%;margin:5%">
                <div class="card">
                    <div class="card-header">
                        <center>
                            تعديل مستخدم
                        </center>
                    </div>
                    @using (Html.BeginForm("Edit", "Users", FormMethod.Post))
                    {
                        <div class="card-body">
                            @Html.LabelFor(m => m.UserName, null, new { @class = "label-control" })
                            @Html.TextBoxFor(m => m.UserName, null, new { @class = "form-control", autocomplete = "off", onkeypress = "return /[0-9a-zA-Z-ا-ي- -]/i.test(event.key)" })
                            <span asp-validation-for="UserName" class="text-danger"></span>

                            <br />
                            @* <select asp-for="Role" asp-items="@Html.GetEnumSelectList<Roles>()" class="form-select form-control">
                            </select> *@
                            @Html.DropDownListFor(m => m.Role,selectList , new {@class="form-control form-select"})
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <div class="card-footer" style="text-align:end">
                            <br />
                            <input type="submit" value="حفظ البيانات" class="btn btn-primary" />
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>


