@model IEnumerable<Core.Entities.User>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="row">
    <div class="block" style="width:100%">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <center>
                        <h3>
                            <u> ادارة المستخدمين</u>
                        </h3>
                    </center>
                    <br />
                </div>

                <div class="card-body">
                    <table class="table table-striped table-bordered">
                        <thead>
                        <th>اسم المستخدم</th>
                        <th>صلاحية المستخدم</th>
                        <th> عمليات</th>
                        </thead>

                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.UserName</td>
                                    <td>@user.Role</td>
                                    <td><a asp-action="Edit" asp-controller="Users" asp-route-id="@user.ID">Edit</a>  </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="card-footer">
                    <a asp-action="Create" asp-controller="Users" class="btn btn-primary"><i class="fa fa-plus fa-2x"></i> إضافة </a>
                </div>
            </div>
        </div>

    </div>
</div>
    



@section scripts{
    <partial name="_NotificationPartial" />
}
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}